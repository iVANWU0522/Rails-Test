<div class="container-fluid">
  <div class="alert alert-primary" role="alert" >
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <h2>Import People</h2>

    <%= form_tag import_people_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file, :class=>"form-control" %>
      </div>
      <%= submit_tag("Upload CSV", :class=>"btn btn-primary") %>
    <% end %>

  </div>
  <div class="row myTable">
    <table id="myTable" class="display">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Location</th>
          <th>Species</th>
          <th>Gender</th>
          <th>Affiliations</th>
          <th>Weapon</th>
          <th>Vehicle</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
        <tr>
          <td><%= person.first_name %></td>
          <td><%= person.last_name %></td>
          <td><%= person.location.name %></td>
          <td><%= person.species %></td>
          <td><%= person.gender %></td>
          <td><%= person.affiliation.name %></td>
          <td><%= person.weapon %></td>
          <td><%= person.vehicle %></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

<<script type="text/javascript">
  $(document).ready( function () {
    $('#myTable').DataTable({
      "lengthMenu": [[5, 10, -1], [5, 10, "All"]]
    });
  } );
</script>
